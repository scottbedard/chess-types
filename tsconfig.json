{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "src",
    "paths": {
      "@/*": ["src/*"],
    },
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
